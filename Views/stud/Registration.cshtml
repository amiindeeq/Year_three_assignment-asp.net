@model student;
<h3>Lacag dirid</h3>
<br />
<form asp-controller="stud" asp-action="Create" method="post">
	<div class="form-group">
		<label class="form-label"><b>ID:</b></label>
		<input asp-for="Id" class="form-control" />
	</div>
	<div class="form-group">
		<label class="form-label"><b>Name:</b></label>
		<input asp-for="Name" class="form-control" />
	</div>
	<div class="form-group">
		<label class="form-label"><b>Mobile:</b></label>
		<input asp-for="Mobile" class="form-control" />
	</div>
	<div class="form-group">
		<label class="form-label"><b>Course:</b></label>
		<input asp-for="Course" class="form-control" />
	</div>
	<br />


	<button type="submit" class="btn btn-info" >Submit Data</button>
		<button type="button" class="btn btn-danger" onclick="clearData()">Clear Data</button>

		<div class="mt-3">
			<a asp-controller="stud" asp-action="assignment" class="btn btn-primary">Go Back</a>
		</div>
	
</form>